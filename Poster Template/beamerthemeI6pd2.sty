\setbeamercolor{separation line}{bg=ndGold}
\setbeamercolor{title in headline}{fg=black}
\setbeamercolor{author in headline}{fg=black}
\setbeamercolor{institute in headline}{fg=black}

\setbeamercolor{framesubtitle}{fg=ta3orange, bg=ta2gray}
\setbeamercolor{author in head/foot}{fg=black, bg=white}
\setbeamercolor{title in head/foot}{fg=white, bg=ndBlue}

\setbeamercolor*{normal text}{fg=black, bg=ndBlue}
\setbeamercolor*{block body}{bg=ta3aluminium,fg=black}
\setbeamercolor*{block title}{fg=white,bg=ndGold}
