\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.02\paperwidth}
      \end{column}
  	  \begin{column}{.15\paperwidth}
  	  	\vskip8ex
  	  	\begin{center}
  	  		\includegraphics[width=.8\linewidth]{fig/logos/roam-logo.eps}
  	  	\end{center}
    	\begin{center}
    		\includegraphics[width=.4\linewidth]{fig/logos/NSF.eps}
    	\end{center}
  	  	\vskip2ex 
  	  \end{column}
      \begin{column}{.6\paperwidth}
        \vskip4ex
        \raggedleft
        \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[1ex]}
        \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}     
      \end{column}
      \begin{column}{.12\paperwidth}
        \vskip8ex
        \begin{center}
          \includegraphics[width=.75\linewidth]{fig/logos/AME.eps}
        \end{center}
        \vskip2ex
      \end{column}
      \begin{column}{.02\paperwidth}
      \end{column}
    \end{columns}
    \vskip2ex
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{10pt}
  \end{beamercolorbox}
}

